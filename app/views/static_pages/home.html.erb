<div class="row">        


  <div class="col-md-9 postContent">
    <%= render 'posts/index' %>  
  </div>

  
  <div class="col-md-3 rightArchived">
    <h4 class="archivedTitle">Archived Posts</h4>
        <div class="archivedHeadingOne">Today</div>
        <div class="archivedTimeDisplayedOne">  
          <% @archived_posts.each do |apost| %> 
            <% if apost.created_at == Date.today && apost.content.length > 45 %>
              <div>too long</div>
            <% elsif apost.created_at == Date.today %>
              <p>Post was made <%= time_ago_in_words(apost.created_at) %> ago</p>
              <div class="archivedImageOne"><%= link_to image_tag(apost.image.url(:thumb)), show_path(apost) %></div>
              <div class="archivedHiddenSubject"><%= apost.subject %></div>
            <% end %>
          <% end %>
        </div>
       
        <div class="archivedHeadingTwo">Yesterday</div>
        <div class="archivedTimeDisplayedTwo">
          <% @archived_posts.each do |apost| %>
            <% if apost.created_at == 1.day.ago && apost.content.length > 45 %>
              <div>too long</div>
            <% elsif apost.created_at == 1.day.ago %>
              <p>Post was made <%= time_ago_in_words(apost.created_at) %> ago</p>
              <div class="archivedImageTwo"><%= link_to image_tag(apost.image.url(:thumb)), show_path(apost) %></div>
              <div class="archivedHiddenSubject"><%= apost.subject %></div>
            <% end %>
          <% end %>
        </div>
        
        <div class="archivedHeadingThree">1 Week Ago</div>
        <div class="archivedTimeDisplayedThree">
          <% @archived_posts.each do |apost| %>
            <% if apost.created_at >= 1.week.ago && apost.created_at < 1.day.ago && apost.content.length > 45 %>
              <div>too long</div>
            <% elsif apost.created_at >= 1.week.ago && apost.created_at < 1.day.ago %>
              <p>Post was made <%= time_ago_in_words(apost.created_at) %> ago</p>
              <div class="archivedImageThree"><%= link_to image_tag(apost.image.url(:thumb)), show_path(apost) %></div>
              <div class="archivedHiddenSubject"><%= apost.subject %></div>
            <% end %>
          <% end %>
        </div>
        
        <div class="archivedHeadingFour">2 Weeks Ago</div>
        
          <% @archived_posts.each do |apost| %>
          
            <% if apost.created_at >= 2.week.ago && apost.created_at < 1.week.ago && apost.content.length > 45 %>
              <div>too long</div>
            <% elsif apost.created_at >= 2.week.ago && apost.created_at < 1.week.ago %>
            <div class="archivedTimeDisplayedFour panel panel-md">
              <p class="archivedTimeCounter">Post was made <%= time_ago_in_words(apost.created_at) %> ago</p>
              <div class="archivedImageFour"><%= image_tag apost.image.url(:thumb) %></div>
              <div class="archivedHiddenSubject"><%= link_to apost.subject, show_path(apost), class: "archivedSubjectColor" %></div>
              </div>
            <% end %>           
          <% end %>
        
                
        <div class="archivedHeadingFive">3 Weeks Ago</div>
        <div class="archivedTimeDisplayedFive">
          <% @archived_posts.each do |apost| %>
            <% if apost.created_at >= 3.week.ago && apost.created_at < 2.week.ago && apost.content.length > 45 %>
              <div>too long</div>
            <% elsif apost.created_at >= 3.week.ago && apost.created_at < 2.week.ago %>
              <p>Post was made <%= time_ago_in_words(apost.created_at) %> ago</p>
              <div class="archivedImageFive"><%= link_to image_tag(apost.image.url(:thumb)), show_path(apost) %></div>
                <div class="archivedHiddenSubject"><%= apost.subject %></div>
            <% end %>
          <% end %>
          </div>
        
               
        <div class="archivedHeadingSix">1 Month Ago</div>
        <div class="archivedTimeDisplayedSix">
          <% @archived_posts.each do |apost| %>
            <% if apost.created_at >= 1.month.ago && apost.created_at < 3.week.ago && apost.content.length > 45 %> 
            <% elsif apost.created_at >= 1.month.ago && apost.created_at < 3.week.ago %>
              <p>Post was made <%= time_ago_in_words(apost.created_at) %> ago</p>
              <div class="archivedImageSix"><%= link_to image_tag(apost.image.url(:thumb)), show_path(apost) %></div>
              <div class="archivedHiddenSubject"><%= apost.subject %></div>
            <% end %>
          <% end %>
        </div>

  </div>


</div>

